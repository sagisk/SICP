import random
guess = ''
def head_tail(guess):
   if guess == 'heads':
        guess = 1
        return guess
   else:
     guess = 0
     return guess

guess = ''
while guess not in ('heads', 'tails'):
 print('Guess the coin toss! Enter heads or tails:')
 guess = input()
toss = random.randint(0, 1) # 0 is tails, 1 is heads
if toss == head_tail(guess):
 print('You got it!')
else:
 print('Nope! Guess again!')
 guess = input()
 if toss == guess:
     print('You got it!')
 else:
     print('Nope. You are really bad at this game.')

