factorial_recursive <- function(n){
  if(n == 1) return(1)
  else n*factorial(n-1)
     }
 factorial_iterative <- function(n){
   iter <- function(i, n){
     if(n == 1) return(i)
     else iter(n*i, n-1)
     }
   iter(1, n)
   }
